{
  "name": "vscode-pdf-rag",
  "displayName": "PDF RAG for Copilot",
  "description": "Feed VS Code Copilot with PDF documents using RAG database",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pdfRag.addPdfFiles",
        "title": "PDF RAG: Add PDF Files to Knowledge Base"
      },
      {
        "command": "pdfRag.clearDatabase",
        "title": "PDF RAG: Clear Knowledge Base"
      },
      {
        "command": "pdfRag.searchKnowledge",
        "title": "PDF RAG: Search Knowledge Base"
      },
      {
        "command": "pdfRag.listDocuments",
        "title": "PDF RAG: List Indexed Documents"
      }
    ],
    "languageModelTools": [
      {
        "name": "pdf-rag-search",
        "displayName": "PDF Knowledge Base Search",
        "modelDescription": "Search the indexed PDF knowledge base for relevant information. Use this tool when you need to find information from PDFs that have been indexed by the user.",
        "description": "Search the indexed PDF knowledge base for relevant information",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "The search query to find relevant information in PDFs"
            },
            "maxResults": {
              "type": "number",
              "description": "Maximum number of results to return (default: 5)"
            }
          },
          "required": ["query"]
        }
      }
    ],
    "configuration": {
      "title": "PDF RAG",
      "properties": {
        "pdfRag.embeddingProvider": {
          "type": "string",
          "enum": ["openai", "ollama"],
          "default": "openai",
          "description": "Embedding provider to use (openai or ollama)"
        },
        "pdfRag.ollamaModel": {
          "type": "string",
          "default": "nomic-embed-text",
          "description": "Ollama embedding model to use (e.g., nomic-embed-text, mxbai-embed-large)"
        },
        "pdfRag.ollamaBaseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server base URL"
        },
        "pdfRag.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for embeddings"
        },
        "pdfRag.embeddingModel": {
          "type": "string",
          "default": "text-embedding-3-small",
          "description": "OpenAI embedding model to use"
        },
        "pdfRag.chunkSize": {
          "type": "number",
          "default": 1000,
          "description": "Size of text chunks for embedding"
        },
        "pdfRag.chunkOverlap": {
          "type": "number",
          "default": 200,
          "description": "Overlap between consecutive chunks"
        },
        "pdfRag.maxResults": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of results to return"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "langchain": "^0.1.0",
    "pdf-parse": "^1.1.1",
    "openai": "^4.20.0",
    "ollama": "^0.5.0"
  }
}
